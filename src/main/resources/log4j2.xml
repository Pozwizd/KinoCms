<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Properties>
<!--        <Property name="path">C:\\Users\\Belwerk\\Downloads\\ProjectFiles\\KinoCms-R.Miahkykh\\logs</Property>-->
        <Property name="path">/home/slj/projects/KinoCms-R.Miahkykh/logs</Property>
    </Properties>
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT" follow="true">
            <PatternLayout pattern="[%-5level] | %d{yyyy-MM-dd HH:mm:ss} | [%t] %c{1} - %msg%n"/>
        </Console>
        <RollingFile name="File" fileName="${path}/app.log"
                     filePattern="${path}/$${date:yyyy-MM}/app-%d{MM-dd-yyyy}-%i.log" immediateFlush="true">
            <PatternLayout>
                <Pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n</Pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy/>
                <SizeBasedTriggeringPolicy size="5 MB"/>
            </Policies>
        </RollingFile>
    </Appenders>
    <Loggers>
        <Root level="info">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="File"/>
        </Root>
    </Loggers>
</Configuration>